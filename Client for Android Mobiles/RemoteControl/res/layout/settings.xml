<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click Speed:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <SeekBar
            android:id="@+id/click_speed_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Click Speed"
            android:max="800"
            android:paddingBottom="20dp"
            android:paddingLeft="30dp"
            android:progress="150" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keyboard Zoom Level"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <SeekBar
            android:id="@+id/keyboard_zoom_level_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="500"
            android:paddingBottom="20dp"
            android:paddingLeft="30dp"
            android:progress="100" />

        <CheckBox
            android:id="@+id/keyboard_horizontal_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Horizontal Keyboard"
            android:text="Horizontal Keyboard" />

        <Button
            android:id="@+id/save_settings_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Save" />

    </LinearLayout>

</ScrollView>